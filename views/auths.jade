extends layout

block content
  div#auth-panel(ng-controller="AuthCtrl")
    form(name="AuthForm" novalidate ng-submit="signin()")
      input(type="text"     name="login"    ng-model="login"     placeholder="login..."    ng-required="true" autofocus)
      input(type="password" name="password" ng-model="password"  placeholder="password..." ng-required="true")
      div.error(ng-show="errorMessage") {{errorMessage}}
      button(type='submit'  name="signin" ng-disabled="isRequesting" ng-class="{disabled: isRequesting, signed: isSigned}") {{message}}
      a#logo-42(href="http://www.42.fr")
