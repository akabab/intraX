extends layout

block content
  div(ng-controller="AuthController")
    form(name="AuthForm" novalidate ng-submit="signin()")
      label Login
      input(type="text"     name="login"    ng-model="login"    ng-minlength="6" ng-maxlength="32" ng-required)
      label Password
      input(type="password" name="password" ng-model="password" ng-minlength="6" ng-maxlength="32" ng-required)
      button(type='submit') SignIn
      toggle(ng-show="AuthForm.login.$dirty && AuthForm.login.$valid && AuthForm.password.$dirty && AuthForm.password.$valid") OK
    button(ng-click="getForm()") getForm()
