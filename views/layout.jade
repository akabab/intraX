doctype html
html(ng-app="intraX")
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js")
    script(type="text/javascript" src="http://angular-ui.github.io/ui-router/release/angular-ui-router.min.js")
    script(src="/scripts/app.js")
  body
    #sidebar.sidewidth
    include ui/sidebar
    #topmenu
      include ui/topmenu
    table#view(border="0" cellspacing="0" cellpadding="0")
      tbody
        tr
          td.sidewidth.fakemenu
          td
          - if (account) {
            #content(ui-view)
          - } else {
              div(ng-controller="AuthCtrl")
                form(name="AuthForm" novalidate ng-submit="signin()")
                  input(type="text"     name="login"    ng-model="login"    placeholder="login"    ng-minlength="6" ng-maxlength="20" ng-required="true" autofocus)
                  input(type="password" name="password" ng-model="password" placeholder="password" ng-minlength="6" ng-maxlength="32" ng-required="true")
                  button(type='submit'  name="signin"   ng-disabled="AuthForm.$pristine || AuthForm.$invalid") SignIn
                  //-toggle(ng-show="AuthForm.login.$dirty && AuthForm.login.$valid && AuthForm.password.$dirty && AuthForm.password.$valid") OK
                //-button(ng-click="getForm()") getForm()
                div.error(ng-show="errorMessage") {{errorMessage}}
          - }
     #scripts

