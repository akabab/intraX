#sidebar-menu.sidewidth(ng-controller="SidebarCtrl")
  .link(ng-repeat="link in links" ng-init="show = link.deploy; linkSref = genLink(link.name)")
    .elem.noselect(id="{{linkSref}}")
      i.fa(ng-class='{open:show, active:link.sublinks.length > 0}' ng-click="show = !show")
      a(ui-sref="{{linkSref}}" tabindex="-1" ng-class="link.unseen ? 'bold' : 'wide'") {{link.name}}
      a.unseen(ng-if="link.unseen" ui-sref="{{linkSref + ':unseen'}}" tabindex="-1") ({{link.unseen}})
    .sublinks(ng-show="show")
