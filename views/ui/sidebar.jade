      .sublink(ng-repeat="sublink in link.sublinks" ng-init="subshow = sublink.deploy; sublinkSref = genLink(link.name, sublink.name)")
        div(ng-if="sublink.children.length")
          .elem.noselect(id="{{sublinkSref}}")
            i.fa.active(ng-class='{open:subshow}' ng-click="subshow = !subshow")
            a(ui-sref="{{sublinkSref}}" tabindex="-1" ng-class="sublink.unseen ? 'bold' : 'wide'") {{sublink.name}}
            a.unseen(ng-if="sublink.unseen" ui-sref="{{sublinkSref + ':unseen'}}" tabindex="-1") ({{sublink.unseen}})
          .childlinks(ng-show="subshow")
            .childlink(ng-repeat="childlink in sublink.children" ng-init="childlinkSref = genLink(link.name, sublink.name, childlink.name)")
              .elem.noselect(id="{{childlinkSref}}")
                i.fa
                a(ui-sref="{{childlinkSref}}" tabindex="-1" ng-class="childlink.unseen ? 'bold' : 'wide'") {{childlink.name}}
                a.unseen(ng-if="childlink.unseen" ui-sref="{{childlinkSref + ':unseen'}}" tabindex="-1") ({{childlink.unseen}})
        div(ng-if="!sublink.children.length")
          .elem.noselect(id="{{sublinkSref}}")
            i.fa
            a(ui-sref="{{sublinkSref}}" tabindex="-1" ng-class="sublink.unseen ? 'bold' : 'wide'") {{sublink.name}}
            a.unseen(ng-if="sublink.unseen" ui-sref="{{sublinkSref + ':unseen'}}" tabindex="-1") ({{sublink.unseen}})
  .spacer
